<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>app.controller.servlets.data_servlets.AddPlaneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>list</servlet-name>
        <servlet-class>app.controller.servlets.data_servlets.ListPlanesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>list</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>clear</servlet-name>
        <servlet-class>app.controller.servlets.data_servlets.ClearListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>clear</servlet-name>
        <url-pattern>/clear</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>app.controller.servlets.data_servlets.DeletePlaneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>read</servlet-name>
        <servlet-class>app.controller.servlets.data_servlets.ReadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>read</servlet-name>
        <url-pattern>/read</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>sort</servlet-name>
        <servlet-class>app.controller.servlets.sorting_servlets.SortByTimeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sort</servlet-name>
        <url-pattern>/sort</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>app.controller.servlets.search_servlets.SearchFlightServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchToday</servlet-name>
        <servlet-class>app.controller.servlets.search_servlets.SearchFlightTodayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchToday</servlet-name>
        <url-pattern>/searchToday</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchTomorrow</servlet-name>
        <servlet-class>app.controller.servlets.search_servlets.SearchFlightTomorrowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchTomorrow</servlet-name>
        <url-pattern>/searchTomorrow</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchDay</servlet-name>
        <servlet-class>app.controller.servlets.search_servlets.SearchFlightDayServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchDay</servlet-name>
        <url-pattern>/searchDay</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchDeparture</servlet-name>
        <servlet-class>app.controller.servlets.search_servlets.SearchFlightDepartureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchDeparture</servlet-name>
        <url-pattern>/searchDeparture</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchArrival</servlet-name>
        <servlet-class>app.controller.servlets.search_servlets.SearchFlightArrivalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchArrival</servlet-name>
        <url-pattern>/searchArrival</url-pattern>
    </servlet-mapping>
</web-app>